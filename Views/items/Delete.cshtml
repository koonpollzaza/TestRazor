@model MyApp.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Item</h2>
    <h3>Are you sure you want to delete this item?</h3>
    <div class="card p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Serial Numbers</dt>
            <dd class="col-sm-9">
                @if (Model.SerialNumbers != null && Model.SerialNumbers.Any())
                {
                    @string.Join(", ", Model.SerialNumbers.Select(sn => sn.Name))
                }
                else
                {
                    <span>No serial numbers</span>
                }
            </dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Clients</dt>
            <dd class="col-sm-9">
                @if (Model.ItemClients != null && Model.ItemClients.Any())
                {
                    @string.Join(", ", Model.ItemClients.Select(ic => ic.Client?.Name))
                }
                else
                {
                    <span>No clients</span>
                }
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
